<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label>Name des Events</label><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <label>Uhrzeit</label><br>
    <%= f.time_select :time %>
  </div>
  <div class="field">
    <label>Datum</label><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <label>Beschreibung</label><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <label>URL zum Bild</label><br>
    <%= f.text_field :picture %>
  </div>
    <div>
      <input name="event[user_id]" type="hidden" value="<%= current_user.id %>" id="event_user_id">
    </div>

    <div class="actions">
      <input name="commit" value="Speichern" type="submit">
  </div>
<% end %>
