<h1>Listing Events</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Was?</th>
      <th>Wo?</th>
      <th>Wann?</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
        <td><%= event.location %></td>
        <td><%= event.date.strftime("%d.%m.%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


