<div class="page-header">
  <h1>
    Musik von
    <small><%= @user.username %></small>
  </h1>

</div>
<% if @musics.size == 0 %>
  <p class="alert alert-danger ">
    Es wurde noch keine Musik hinterlegt
  </p>
<% else %>
<table class="table-hover table">
  <thead>
  <tr>
    <th colspan="3">Name</th>
  </tr>
  </thead>
  <tbody>
  <% @musics.each do |music| %>
      <tr>
        <td><%= link_to music.name , music %></td>
        <% if music.user_id == current_user.id %>
          <td>
            <%= link_to "bearbeiten", edit_music_path(music.id) %>
          </td>
          <td>
            <%= link_to 'löschen', music, method: :delete, data: { confirm: 'Wirklich löschen?' } %>
          </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<% end %>